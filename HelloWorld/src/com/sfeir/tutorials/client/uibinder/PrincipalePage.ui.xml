<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:m="urn:import:com.sfeir.tutorials.client.uibinder">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.body {
			height: 520px;
		}
		
		.footer {
			height: 20px;
		}
	</ui:style>
	
	<g:VerticalPanel>
		<!-- header -->
		<m:TopBar></m:TopBar>

		<!-- body -->
		<g:HorizontalPanel styleName="{style.body}">
			<g:SimplePanel ui:field="leftPart"></g:SimplePanel>
			<g:SimplePanel ui:field="rightPart"></g:SimplePanel> 
		</g:HorizontalPanel>

		<!-- footer -->
		<m:FooterBar styleName="{style.footer}"></m:FooterBar>
	</g:VerticalPanel>
</ui:UiBinder> 